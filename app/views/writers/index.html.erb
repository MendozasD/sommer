<p id="notice"><%= notice %></p>

<h1>Writers</h1>

<table>
  <thead>
    <tr>
      <th>Piece</th>
      <th>Genre</th>
      <th>Year</th>
      <th>Responsible</th>
      <th>Comment</th>
      <th>Premiere</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @writers.each do |writer| %>
      <tr>
        <td><%= writer.piece %></td>
        <td><%= writer.genre %></td>
        <td><%= writer.year %></td>
        <td><%= writer.responsible %></td>
        <td><%= writer.comment %></td>
        <td><%= writer.premiere %></td>
        <td><%= link_to 'Show', writer %></td>
        <td><%= link_to 'Edit', edit_writer_path(writer) %></td>
        <td><%= link_to 'Destroy', writer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

